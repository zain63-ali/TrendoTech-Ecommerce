{{!-- Main layout template - Saare pages ke liye base layout --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} | TrendoTech</title>
    {{!-- Google Fonts - Poppins font family --}}
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    {{!-- Bootstrap CSS - Responsive design ke liye --}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    {{!-- Font Awesome - Icons ke liye --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    {{!-- SweetAlert2 CSS - Beautiful alerts ke liye --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    {{!-- Custom CSS - Site specific styles --}}
    <link rel="stylesheet" href="/css/styles.css">
    
    {{!-- Image optimization styles --}}
    <style>
        /* Lazy loading and image optimization */
        img {
            max-width: 100%;
            height: auto;
            loading: lazy;
        }
        
        /* Placeholder for loading images */
        .img-placeholder {
            background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
            background-size: 200% 100%;
            animation: loading 1.5s infinite;
        }
        
        @keyframes loading {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }
        
        /* Optimize product images */
        .product-img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .product-img:hover {
            transform: scale(1.05);
        }
    </style>
</head>
{{!-- Body tag - User ID data attribute ke saath agar logged in hai --}}
<body {{#if user}}data-user-id="{{user.id}}"{{/if}}>
    {{!-- Header partial include karo --}}
    {{> header}}
    
    {{!-- Main content area --}}
    <main>
        {{!-- Success message display karo agar hai --}}
        {{#if successMessage}}
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{successMessage}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
        {{/if}}
        
        {{!-- Error message display karo agar hai --}}
        {{#if errorMessage}}
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{errorMessage}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
        {{/if}}
        
        {{!-- Page specific content render karo --}}
        {{{body}}}
    </main>
    
    {{!-- Footer partial include karo --}}
    {{> footer}}
    
    {{!-- Back to Top Button - Page top par jane ke liye --}}
    <button class="back-to-top" title="Back to Top">
        <i class="fas fa-chevron-up"></i>
    </button>
    
    {{!-- jQuery Library - DOM manipulation ke liye --}}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    {{!-- Bootstrap JS Bundle with Popper - Bootstrap components ke liye --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {{!-- SweetAlert2 JS - Beautiful alerts ke liye --}}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    {{!-- Custom JavaScript - Site specific functionality --}}
    <script src="/js/main.js"></script>
</body>
</html> 