<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Seller Menu</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/seller/dashboard" class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                    <a href="/seller/products/add" class="list-group-item list-group-item-action">
                        <i class="fas fa-plus-circle me-2"></i> Add New Product
                    </a>
                    <a href="/users/profile" class="list-group-item list-group-item-action">
                        <i class="fas fa-user me-2"></i> My Profile
                    </a>
                    <a href="/users/logout" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Edit Product: {{product.name}}</h5>
                </div>
                <div class="card-body">
                    {{#if formError}}
                    <div class="alert alert-danger mb-4">
                        {{formError}}
                    </div>
                    {{/if}}
                    
                    <form action="/seller/products/{{product._id}}" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{product.name}}" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="4" required>{{product.description}}</textarea>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="price" class="form-label">Price (PKR)</label>
                                <input type="number" class="form-control" id="price" name="price" min="0.01" step="0.01" value="{{product.price}}" required>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label for="category" class="form-label">Category</label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="men-clothing" {{#if (eq product.category 'men-clothing')}}selected{{/if}}>Men's Clothing</option>
                                    <option value="women-clothing" {{#if (eq product.category 'women-clothing')}}selected{{/if}}>Women's Clothing</option>
                                    <option value="accessories" {{#if (eq product.category 'accessories')}}selected{{/if}}>Accessories</option>
                                    <option value="electronics" {{#if (eq product.category 'electronics')}}selected{{/if}}>Electronics</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Current Image</label>
                                <div class="card">
                                    <img src="{{product.imageUrl}}" class="card-img-top" alt="{{product.name}}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="productImage" class="form-label">Change Product Image</label>
                                <input type="file" class="form-control" id="productImage" name="productImage" accept="image/*">
                                <div class="form-text">Upload a new image or leave empty to keep the current image.</div>
                            </div>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="inStock" name="inStock" value="true" {{#if product.inStock}}checked{{/if}}>
                            <label class="form-check-label" for="inStock">In Stock</label>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="/seller/dashboard" class="btn btn-secondary">Cancel</a>
                            <div>
                                <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    Delete Product
                                </button>
                                <button type="submit" class="btn btn-success">Update Product</button>
                            </div>
                        </div>
                    </form>
                    
                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Confirm Delete</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete <strong>{{product.name}}</strong>?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form action="/seller/products/delete/{{product._id}}" method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 