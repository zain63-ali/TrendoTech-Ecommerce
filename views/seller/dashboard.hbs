{{!-- Seller Dashboard Page - Seller ka main dashboard --}}
<div class="container my-5">
    <div class="row">
        {{!-- Seller Navigation Sidebar --}}
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Seller Menu</h5>
                </div>
                {{!-- Seller menu links --}}
                <div class="list-group list-group-flush">
                    <a href="/seller/dashboard" class="list-group-item list-group-item-action active">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                    <a href="/seller/products/add" class="list-group-item list-group-item-action">
                        <i class="fas fa-plus-circle me-2"></i> Add New Product
                    </a>
                    <a href="/users/profile" class="list-group-item list-group-item-action">
                        <i class="fas fa-user me-2"></i> My Profile
                    </a>
                    <a href="/users/logout" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </div>
            </div>
        </div>
        
        {{!-- Main Seller Dashboard Content --}}
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Seller Dashboard</h2>
                <a href="/seller/products/add" class="btn btn-success">
                    <i class="fas fa-plus-circle me-2"></i> Add New Product
                </a>
            </div>
            
            {{!-- Success message display --}}
            {{#if formSuccess}}
            <div class="alert alert-success mb-4">
                {{formSuccess}}
            </div>
            {{/if}}
            
            {{!-- Error message display --}}
            {{#if formError}}
            <div class="alert alert-danger mb-4">
                {{formError}}
            </div>
            {{/if}}
            
            {{!-- Seller Statistics Card --}}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center border-end">
                            <h4 class="text-success">{{productCount}}</h4>
                            <p class="text-muted mb-0">Active Products</p>
                        </div>
                        <div class="col-md-4 text-center border-end">
                            <h4 class="text-success">0</h4>
                            <p class="text-muted mb-0">Total Orders</p>
                        </div>
                        <div class="col-md-4 text-center">
                            <h4 class="text-success">0.00</h4>
                            <p class="text-muted mb-0">Total Revenue</p>
                        </div>
                    </div>
                </div>
            </div>
            
            {{!-- Seller Products List Card --}}
            <div class="card">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Your Products</h5>
                </div>
                <div class="card-body p-0">
                    {{!-- Agar products hain to table dikhayein --}}
                    {{#if products.length}}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{!-- Seller products list loop --}}
                                {{#each products}}
                                <tr>
                                    <td>
                                        {{!-- Product image aur name display --}}
                                        <div class="d-flex align-items-center">
                                            <img src="{{this.imageUrl}}" alt="{{this.name}}" class="img-thumbnail me-2" style="width: 50px; height: 50px; object-fit: cover;">
                                            <div>
                                                <a href="/products/{{this._id}}" class="text-decoration-none">{{this.name}}</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>Rs. {{this.price}}</td>
                                    <td>{{this.category}}</td>
                                    <td>
                                        {{!-- Stock status badge --}}
                                        <span class="badge {{#if this.inStock}}bg-success{{else}}bg-danger{{/if}}">
                                            {{#if this.inStock}}In Stock{{else}}Out of Stock{{/if}}
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        {{!-- Product action buttons --}}
                                        <div class="btn-group">
                                            {{!-- Edit product button --}}
                                            <a href="/seller/products/edit/{{this._id}}" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            {{!-- Delete product button --}}
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{this._id}}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                        
                                        {{!-- Delete Confirmation Modal --}}
                                        <div class="modal fade" id="deleteModal{{this._id}}" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete <strong>{{this.name}}</strong>?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form action="/seller/products/delete/{{this._id}}" method="POST">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{!-- Empty state message --}}
                    {{else}}
                    <div class="text-center py-5">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <h5>You don't have any products yet</h5>
                        <p class="text-muted">Start selling by adding your first product</p>
                        <a href="/seller/products/add" class="btn btn-success mt-2">
                            <i class="fas fa-plus-circle me-2"></i> Add New Product
                        </a>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>