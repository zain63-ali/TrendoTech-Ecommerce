{{!-- Reset Password Page - New password set karne ke liye form --}}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Reset Password</h3>
                </div>
                <div class="card-body p-4">
                    {{!-- Error message display --}}
                    {{#if formError}}
                    <div class="alert alert-danger">
                        {{formError}}
                    </div>
                    {{/if}}
                    
                    {{!-- Agar token valid hai to reset form dikhayein --}}
                    {{#if validToken}}
                    <p class="text-muted mb-4">Enter your new password below.</p>
                    
                    {{!-- Password reset form --}}
                    <form action="/users/reset/{{token}}" method="POST">
                        <div class="mb-3">
                            <label for="password" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="password" name="password" required minlength="6">
                            <div class="form-text">Password must be at least 6 characters long.</div>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                    </form>
                    {{!-- Agar token invalid/expired hai --}}
                    {{else}}
                    <div class="text-center">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                        <p class="text-muted">This password reset link is invalid or has expired.</p>
                        <a href="/users/forgot" class="btn btn-primary">Request New Reset Link</a>
                    </div>
                    {{/if}}
                </div>
                {{!-- Footer with back to login link --}}
                <div class="card-footer bg-light text-center">
                    <p class="mb-0">Remember your password? <a href="/users/login">Back to Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
