{{!-- Wishlist Page - User ke favorite products ki listing --}}
<div class="container my-5">
    <h1 class="mb-4">My Wishlist</h1>
    
    {{!-- Success message display --}}
    {{#if successMessage}}
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        {{successMessage}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    
    {{!-- Error message display --}}
    {{#if errorMessage}}
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        {{errorMessage}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    
    {{!-- Wishlist items agar available hain --}}
    {{#if wishlistItems.length}}
        <div class="row">
            {{!-- Wishlist items loop --}}
            {{#each wishlistItems}}
            <div class="col-md-3 mb-4">
                <div class="card h-100 product-card position-relative">
                    {{!-- Product image with overlay actions --}}
                    <div class="card-img-top position-relative overflow-hidden" style="height: 200px;">
                        <img src="{{this.imageUrl}}" class="img-fluid w-100 h-100 object-fit-cover" alt="{{this.name}}">
                        <div class="position-absolute bottom-0 start-0 end-0 bg-dark bg-opacity-50 d-flex justify-content-between p-2">
                            {{!-- Add to cart button --}}
                            <button 
                                class="btn btn-sm btn-primary add-to-cart-btn" 
                                data-product-id="{{this._id}}"
                            >
                                <i class="fas fa-shopping-cart me-1"></i> Add to Cart
                            </button>
                            
                            {{!-- Remove from wishlist form --}}
                            <form action="/wishlist/remove/{{this._id}}" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash me-1"></i> Remove
                                </button>
                            </form>
                        </div>
                    </div>
                    {{!-- Product info --}}
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text text-success fw-bold">Rs. {{this.price}}</p>
                    </div>
                    {{!-- View details link --}}
                    <div class="card-footer bg-white border-top-0">
                        <a href="/products/{{this._id}}" class="btn btn-outline-secondary w-100">View Details</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    {{!-- Empty wishlist message --}}
    {{else}}
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-heart text-muted" style="font-size: 4rem;"></i>
            </div>
            <h3 class="mb-3">Your wishlist is empty</h3>
            <p class="text-muted mb-4">Save your favorite items to your wishlist so you can find them later.</p>
            <a href="/products" class="btn btn-primary">Browse Products</a>
        </div>
    {{/if}}
</div>